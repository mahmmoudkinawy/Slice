@page
@model FoodTypes.CreateModel
@{
    ViewData["Title"] = "Create Food Type";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Food Type</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FoodType.Name"></label>
            <input asp-for="FoodType.Name" class="form-control" />
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>
        <button class="btn btn-success" type="submit">Create</button>
        <a class="btn btn-dark" asp-page="Index">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}